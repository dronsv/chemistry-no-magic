const locale = (Astro.currentLocale ?? 'ru') as SupportedLocale;
---

<BaseLayout title="Карта компетенций" description="Граф зависимостей навыков: от простого к сложному">
  <CompetencyGraphIsland locale={locale} client:idle />
</BaseLayout>
