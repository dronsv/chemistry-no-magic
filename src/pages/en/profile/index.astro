---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ProfileApp from '../../../features/profile/ProfileApp';
import type { SupportedLocale } from '../../../types/i18n';
const locale = (Astro.currentLocale ?? 'ru') as SupportedLocale;
---

<BaseLayout title="Profile" description="Your chemistry competency profile: progress, strengths and weaknesses, recommendations.">
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>
  <ProfileApp locale={locale} client:idle />
</BaseLayout>
