---
import PeriodicTableHint from '../features/periodic-table/PeriodicTableHint';
import SolubilityHint from '../features/reactions/SolubilityHint';

const currentPath = Astro.url.pathname;

const links = [
  { href: '/', label: 'Главная' },
  { href: '/diagnostics/', label: 'Диагностика' },
  { href: '/periodic-table/', label: 'Элементы' },
  { href: '/substances/', label: 'Вещества' },
  { href: '/bonds/', label: 'Связи' },
  { href: '/oxidation-states/', label: 'СО' },
  { href: '/reactions/', label: 'Реакции' },
  { href: '/calculations/', label: 'Расчёты' },
  { href: '/exam/', label: 'Экзамен' },
  { href: '/profile/', label: 'Профиль' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<nav class="nav">
  <div class="nav-inner container">
    <a href="/" class="nav-brand">Химия без магии</a>
    <input type="checkbox" id="nav-toggle" class="nav-toggle-input" />
    <label for="nav-toggle" class="nav-toggle" aria-label="Меню">
      <span></span><span></span><span></span>
    </label>
    <ul class="nav-links">
      {links.map(link => (
        <li>
          <a href={link.href} class:list={['nav-link', { active: isActive(link.href) }]}>
            {link.label}
          </a>
        </li>
      ))}
    </ul>
    <PeriodicTableHint client:idle />
    <SolubilityHint client:idle />
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
    height: var(--nav-height);
  }
  .nav-inner {
    display: flex;
    align-items: center;
    height: 100%;
  }
  .nav-brand {
    font-weight: 700;
    font-size: 1.1rem;
    color: var(--color-text);
    margin-right: auto;
  }
  .nav-brand:hover { text-decoration: none; }
  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: var(--space-xs);
  }
  .nav-link {
    display: block;
    padding: var(--space-sm) var(--space-md);
    border-radius: 0.375rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    transition: background 0.15s, color 0.15s;
  }
  .nav-link:hover {
    background: var(--color-bg-alt);
    color: var(--color-text);
    text-decoration: none;
  }
  .nav-link.active {
    color: var(--color-primary);
    font-weight: 500;
  }
  .nav-toggle-input { display: none; }
  .nav-toggle { display: none; }

  @media (max-width: 768px) {
    .nav { height: auto; min-height: var(--nav-height); }
    .nav-inner { flex-wrap: wrap; }
    .nav-toggle {
      display: flex;
      flex-direction: column;
      gap: 4px;
      cursor: pointer;
      padding: var(--space-sm);
    }
    .nav-toggle span {
      display: block;
      width: 20px;
      height: 2px;
      background: var(--color-text);
      transition: transform 0.2s;
    }
    .nav-links {
      display: none;
      flex-direction: column;
      width: 100%;
      padding: var(--space-sm) 0;
    }
    .nav-toggle-input:checked ~ .nav-links {
      display: flex;
    }
  }
</style>
